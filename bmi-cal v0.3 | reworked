#include <Keypad.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

const byte ROWS = 4; // number of rows on the keypad
const byte COLS = 4; // number of columns on the keypad

// define the symbols on the buttons of the keypad
char keys[ROWS][COLS] = {
  {'1', '2', '3', 'A'},
  {'4', '5', '6', 'B'},
  {'7', '8', '9', 'C'},
  {'*', '0', '#', 'D'}
};

// connect the keypad to the Arduino pins
byte rowPins[ROWS] = {9, 8, 7, 6};
byte colPins[COLS] = {5, 4, 3, 2};

// create the keypad object
Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

// define variables for w1 and h2
float w1 = 0;
float h2 = 0;

// initialize the LCD object with the correct address
LiquidCrystal_I2C lcd(0x27, 16, 2);

void setup() {
  Serial.begin(9600);
  // initialize the LCD
  lcd.init();
  // turn on the backlight
  lcd.backlight();
}

void loop() {
  // get input from the keypad
  char key = keypad.getKey();

  // if a key is pressed
  if (key != NO_KEY) {
    // if the key is a number
    if (isdigit(key)) {
      // add the number to w1 or h2 depending on which one is being entered
      if (h2 == 0) {
        w1 = w1 * 10 + (key - '0') / 100.0;
      } else {
        h2 = h2 * 10 + (key - '0') / 100.0;
      }
      Serial.print(key);
      // display the key on the LCD
      lcd.print(key);
    }
    // if the key is the decimal point
    else if (key == '.') {
      // add the decimal point to w1 or h2 depending on which one is being entered
      if (h2 == 0) {
        w1 = w1 + 0.01;
      } else {
        h2 = h2 + 0.01;
      }
      Serial.print(key);
      // display the decimal point on the LCD
      lcd.print(key);
    }
    // if the key is the enter key
    else if (key == '#') {
      // if both values have been entered
      if (w1 != 0 && h2 != 0) {
        // calculate the result
        float result = w1 / (h2 * h2);
        Serial.print(" = ");
        Serial.print(result);
        Serial.println(" m^-2");
        // display the result on the LCD
        lcd.clear();
        lcd.print(result);
        lcd.print(" m^-2");
        // reset the variables
        w1 = 0;
        h2 = 0;
      }
    }
  }
}
